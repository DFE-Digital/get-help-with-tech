<%- title = t('page_titles.gias_updates') %>
<% content_for :title, title %>
<%- content_for :before_content do %>
  <%= breadcrumbs([
    { 'Support home' => support_home_path },
    title,
  ]) %>
<%- end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= title %>
    </h1>

    <h2 class="govuk-heading-l govuk-!-font-size-27">
      <%= govuk_link_to "Schools that need to be added (#{@gias_info_form.new_schools_count})", support_responsible_bodies_path %>
    </h2>

    <p class="govuk-body">Use this section to manage adding new schools to the service</p>

    <h2 class="govuk-heading-l govuk-!-font-size-27">
      <%= govuk_link_to "Schools that have changes (#{@gias_info_form.changed_schools_count})", support_responsible_bodies_path %>
    </h2>

    <p class="govuk-body">Use this section to:</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>apply changes to the school name or address</li>
      <li>move schools to new trusts or responsible bodies</li>
    </ul>

    <h2 class="govuk-heading-l govuk-!-font-size-27">
      <%= govuk_link_to "Schools that need to be closed (#{@gias_info_form.closed_schools_count})", support_responsible_bodies_path %>
    </h2>

    <p class="govuk-body">Use this section to manage permanent school closures</p>
  </div>
</div>
