<h2 class="govuk-heading-l">Sign-ins</h2>

<div class="govuk-!-margin-bottom-4">
  <div class="app-card app-card--blue">
    <span class="app-card__count"><%= @stats.total_signed_in_users %></span>
    <%= t(:users_signed_in, scope: %i[support service_performance], count: @stats.total_signed_in_users) %>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-bottom-4">
  <div class="govuk-grid-column-one-half">
    <div class="app-card">
      <span class="app-card__count"><%= @stats.number_of_different_responsible_bodies_signed_in %></span>
      <%= t(:responsible_bodies, scope: %i[support service_performance], count: @stats.number_of_different_responsible_bodies_signed_in) %>
    </div>
  </div>
  <div class="govuk-grid-column-one-half">
    <div class="app-card">
      <span class="app-card__count"><%= @stats.number_of_different_mnos_signed_in %></span>
      <%= t(:mobile_network_operators, scope: %i[support service_performance], count: @stats.number_of_different_mnos_signed_in) %>
    </div>
  </div>
</div>
