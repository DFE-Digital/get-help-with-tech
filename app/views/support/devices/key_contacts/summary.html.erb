<% content_for :title, t('page_titles.weve_processed_your_file') %>
<%- content_for :before_content do %>
  <%= govuk_link_to('Back', new_support_devices_key_contact_path, class: 'govuk-back-link') %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('page_titles.weve_processed_your_file') %>
    </h1>

    <p class="govuk-body">We imported <strong><%= @summary.success %></strong> key <%= "#{'contact'.pluralize(@summary.success)}" %> from your file</p>

    <% if @summary.errors.any? %>
      <h2 class="govuk-heading-l govuk-!-margin-top-4"><%= "#{@summary.errors.count} #{'record'.pluralize(@summary.errors.count)} contained errors" %></h2>
      <div class="govuk-form-group--error">
        <p class="govuk-error-message">Fix the errors in your data and try uploading again</p>

        <table class="govuk-table requests-table">
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th class="govuk-table__header">Error</th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            <% @summary.errors.each do |row| %>
              <tr class="govuk-table__row">
                <td class="govuk-table__cell">
                  <%= row %>
                </td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    <%- end %>
  </div>
</div>

<%= govuk_button_link_to('Finish', support_devices_key_contacts_path) %>
