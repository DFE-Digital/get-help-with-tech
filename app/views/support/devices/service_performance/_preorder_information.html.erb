    </div>
  </div>
  <div class="govuk-grid-column-one-quarter">
    <div class="app-card">
      <span class="app-card__secondary-count">
        <%= number_with_delimiter(@stats.preorder_information_counts_by_status['needs_info'] || 0) %>
      </span>
      <%= t(:needs_information, scope: %i[support devices_performance], count: @stats.preorder_information_counts_by_status['needs_info'] || 0) %>
    </div>
  </div>
  <div class="govuk-grid-column-one-quarter">
    <div class="app-card app-card--light-blue">
      <span class="app-card__secondary-count">
        <%= number_with_delimiter(@stats.preorder_information_counts_by_status['ready'] || 0) %>
      </span>
      <%= t(:information_given, scope: %i[support devices_performance], count: @stats.preorder_information_counts_by_status['needs_info'] || 0) %>
    </div>
  </div>
</div>
