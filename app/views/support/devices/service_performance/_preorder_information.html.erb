<h2 class="govuk-heading-l govuk-!-margin-top-8">Responsible body engagement</h2>

<div class="govuk-grid-row govuk-!-margin-bottom-4">
  <div class="govuk-grid-column-full">
    <div class="app-card app-card--blue">
      <span class="app-card__count"><%= number_with_delimiter(@stats.number_of_different_responsible_bodies_with_at_least_one_preorder_information_completed) %></span>
      <%= t(:responsible_bodies_with_at_least_one_preorder_information_completed, scope: %i[support service_performance], count: @stats.number_of_different_responsible_bodies_with_at_least_one_preorder_information_completed) %>
    </div>
  </div>
</div>

<h2 class="govuk-heading-l govuk-!-margin-top-8">School decisions and details</h2>

<div class="govuk-grid-row govuk-!-margin-bottom-4">
  <div class="govuk-grid-column-full">
    <div class="app-card app-card--blue">
      <span class="app-card__count"><%= number_with_delimiter(@stats.number_of_schools_with_a_decision_made) %></span>
      <%= t(:decision_made, scope: %i[support devices_performance], count: @stats.number_of_schools_with_a_decision_made) %>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-bottom-4">
  <div class="govuk-grid-column-one-half">
    <div class="app-card">
      <span class="app-card__secondary-count">
        <%= number_with_delimiter(@stats.number_of_schools_devolved_to) %>
      </span>
      <%= t(:schools_devolved_to, scope: %i[support devices_performance], count: @stats.number_of_schools_devolved_to) %>
    </div>
  </div>
  <div class="govuk-grid-column-one-half">
    <div class="app-card">
      <span class="app-card__secondary-count">
        <%= number_with_delimiter(@stats.number_of_schools_managed_centrally) %>
      </span>
      <%= t(:schools_managed_centrally, scope: %i[support devices_performance], count: @stats.number_of_schools_managed_centrally) %>
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
