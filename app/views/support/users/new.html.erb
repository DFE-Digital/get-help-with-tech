<% content_for :title, "Add a user for #{@responsible_body.name} â€“ Support" %>
<%- content_for :before_content do %>
  <div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
      <li class="govuk-breadcrumbs__list-item">
        <%= link_to t('page_titles.support_responsible_bodies'), support_responsible_bodies_path, class: 'govuk-breadcrumbs__link' %>
      </li>
      <li class="govuk-breadcrumbs__list-item">
        <%= link_to @responsible_body.name, support_responsible_body_path(@responsible_body), class: 'govuk-breadcrumbs__link' %>
      </li>
      <li class="govuk-breadcrumbs__list-item">
        Add a user
      </li>
    </ol>
  </div>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
      <%= form_for @user, url: support_responsible_body_users_path, method: :post do |f| %>
          <%= f.govuk_error_summary %>
          
          <h1 class="govuk-heading-xl">Add a user</h1>

          <%= f.govuk_text_field :full_name, label: {size: 'm', text: 'Full name'} %>

          <%= f.govuk_text_field :email_address, label: {size: 'm', text: 'Email address'} %>

          <%= f.govuk_submit 'Submit' %>
      <%- end %>
    </div>
</div>
