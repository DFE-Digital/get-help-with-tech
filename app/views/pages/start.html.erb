<% content_for :title, t('page_titles.start') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('page_titles.start') %>
    </h1>

    <%= render partial: 'shared/eligibility_across_bt_wifi_and_mno_offers' %>

    <h2 class="govuk-heading-l">What to tell us</h2>

    <p class="govuk-body">
      Tell us:
    </p>

    <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
      <li>how many eligible young people you know about</li>
      <li>how many of them can access a BT hotspot</li>
      <li>who needs additional mobile data</li>
    </ul>

    <%= link_to sign_in_path, { role: 'button', draggable: 'false', class: 'govuk-button govuk-button--start', data: { module: 'govuk-button' } } do %>
      Start now
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
      </svg>
    <% end %>
  </div>
</div>
