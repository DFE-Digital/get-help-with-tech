<% content_for :hide_service_name_and_nav_links do "true" end %>
<%= content_for :title, @page.title %>

<%- content_for :before_content do %>
  <div class="govuk-breadcrumbs ">
  <ol class="govuk-breadcrumbs__list">
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to t('page_titles.devices_guidance_index'), devices_guidance_index_path, class: 'govuk-breadcrumbs__link' %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= @page.title %>
    </li>
  </ol>
  </div>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= @page.title %></h1>

    <p class="govuk-body-l"><%= @page.description %></p>

    <h2 class="govuk-heading-s">Contents</h2>

    <div class="app-styled-content">
      <%= @page.rendered_table_of_contents %>
    </div>

    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

    <div class="app-styled-content">
      <%= @page.rendered_markdown %>
    </div>

    <%= render partial: 'shared/guide_navigation' %>
  </div>
</div>
