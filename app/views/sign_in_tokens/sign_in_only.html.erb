<% content_for :title, t('page_titles.sign_in') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @sign_in_token_form, url: sign_in_path, method: :POST do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">
        <%= t('page_titles.sign_in') %>
      </h1>

      <%= f.govuk_email_field :email_address, required: true, label: { text: 'Email address', size: 's' }, hint: { text: 'Enter your email address, and if you have an account, weâ€™ll send you a link to sign in.' } %>

      <%= render GovukComponent::DetailsComponent.new(summary_text: 'Change email address for your account') do %>
        <p>
          A colleague with access to the service can update your email address for you. If a colleague cannot do this, you can <%= ghwt_contact_mailto(label: "contact us", subject: "Change my email address") %> to change it instead.
        </p>
      <%- end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
