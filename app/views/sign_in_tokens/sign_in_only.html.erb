<% content_for :title, t('page_titles.sign_in') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @sign_in_token_form, url: sign_in_path, method: :POST do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">
        <%= t('page_titles.sign_in') %>
      </h1>

      <%= render partial: 'shared/banners/parents_carers_pupils' %>

      <%= f.govuk_email_field :email_address, required: true, label: { text: 'Email address', size: 's' }, hint: { text: 'Enter your email address, and weâ€™ll send you a link to sign in.' } %>

      <%= render GovukComponent::Details.new(summary: 'Change email address') do %>
        <p>Contact <%= ghwt_contact_mailto(subject: 'Request access for another email address') %> to request access for a different email address.</p>
      <%- end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
