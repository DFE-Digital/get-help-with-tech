<% content_for :title, t('page_titles.sign_in_or_create_account') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('page_titles.sign_in_or_create_account') %>
    </h1>
    <%= form_for @sign_in_token_form, url: sign_in_path, method: :POST do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset(:already_have_account, legend: {size: 'm', text: 'Do you already have an account?'}) do %>
        <%= f.govuk_radio_button :already_have_account, 'yes', label: { text: 'Yes, sign in' }, link_errors: true do %>
          <%= f.govuk_email_field :email_address, required: true, label: { text: 'Email address', size: 's' }, hint_text: 'Enter the email address you used to register, and weâ€™ll send you a link to sign in.' %>
        <%- end %>
        <%= f.govuk_radio_button :already_have_account, 'no', label: { text: 'No, I need to create an account' }, link_errors: true %>
      <%- end %>
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
