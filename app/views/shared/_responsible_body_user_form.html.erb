<%= form.govuk_error_summary %>

<%= form.govuk_text_field :full_name,
                          label: { text: 'Name', size: 'm' } %>

<%= form.govuk_email_field  :email_address,
                            label: { text: 'Email address', size: 'm' },
                            hint: { text: 'They will use this email address to sign in' } %>

