<% if !flash.empty? %>
  <% if flash[:warning] %>
    <div class="app-banner app-banner--warning" aria-labelledby="warning-message">
      <div class="app-banner__message">
        <h2 class="govuk-heading-m" id="warning-message">
          <%= flash[:warning] %>
        </h2>
      </div>
    </div>
  <% elsif flash[:info] %>
    <div class="app-banner app-banner--info" aria-labelledby="info-message">
      <div class="app-banner__message">
        <h2 class="govuk-heading-m" id="info-message">
          <%= flash[:info] %>
        </h2>
      </div>
    </div>
  <% elsif flash[:success] %>
    <div class="app-banner app-banner--success" aria-labelledby="success-message" data-module="govuk-error-summary" tabindex="-1" role="alert">
      <div class="app-banner__message">
        <h2 class="govuk-heading-m" id="success-message">
          <%= flash[:success] %>
        </h2>
      </div>
    </div>
  <% end %>
<% end %>
