<%- title = t('page_titles.invite_school_user.title') %>
<%- content_for :title, title_with_error_prefix(title, @user.errors.any?) %>
<%- content_for :before_content do %>
  <%- if @user.has_multiple_schools? %>
    <%- breadcrumbs([
      { 'Your schools' => schools_path },
      { @school.name => home_school_path(@school) },
      { t('page_titles.school_users') => school_users_path(@school) },
      title,
    ]) %>
  <%- else %>
    <% breadcrumbs([
      { 'Home' => home_school_path },
      { t('page_titles.school_users') => school_users_path(@school) },
      title,
    ]) %>
  <%- end %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= title %>
    </h1>
    <p class="govuk-body">Invite someone in your school who:</p>
    <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
      <li>understands what devices are needed and who will get them</li>
      <li>can configure devices or give technical information</li>
    </ul>
    <%= form_for @user, url: school_users_path(@school) do |f| %>
      <%= f.govuk_error_summary %>
      <%= render partial: 'shared/school_user_form', locals: { form: f } %>
      <%= f.govuk_submit 'Send invite' %>
    <%- end %>
  </div>
</div>
