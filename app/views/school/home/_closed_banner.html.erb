<div class="app-card">
  <h2 class="govuk-heading-m">
    Ordering is closed for laptops, tablets and <span class="app-no-wrap">extra mobile data</span>
  </h2>

  <% if @has_ordered || @has_completed_extra_mobile_data_requests %>
    <% if !@in_vcap_pool && @assistance_count == 1 %>
      <%= render partial: 'closed_banner_single' %>
    <% else %>
      <%= render partial: 'closed_banner_multiple' %>
    <% end %>
  <% end %>
  <p class="govuk-body">
    <span class="app-no-wrap">4G wireless routers</span> are available to order until <span class="app-no-wrap">31 July</span>.
  </p>
</div>
