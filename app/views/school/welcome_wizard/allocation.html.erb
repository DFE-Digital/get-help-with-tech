<%- title = t('page_titles.school_user_welcome_wizard.allocation.title', allocation: @allocation) %>
<%- content_for :title, title %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @wizard, url: welcome_wizard_school_path(step: @wizard.step) do |f| %>
      <%= f.hidden_field :step %>
      <h1 class="govuk-heading-xl">
        <%- if impersonated_or_current_user.has_multiple_schools? %><span class="govuk-caption-l"><%= @school.name %></span><%- end %>
        <%= title %>
      </h1>

      <p class="govuk-body">Get help with technology (GHwT) is no longer open to orders.</p>
      <p class="govuk-body">You can still use your account to see information about your setting and the devices it received.</p>

      <%= f.govuk_submit 'Continue to homepage' %>
    <%- end %>
  </div>
</div>
