<%- title = t('page_titles.school.donated_devices.interest.interest_confirmation.title') %>
<%- content_for :title, title %>
<%- content_for :before_content do %>
  <%- school_breadcrumbs items: title, school: @school, user: @current_user %>
<%- end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= title %></h1>

    <%= form_for @form, url: interest_confirmation_donated_devices_school_path(@school), method: :post do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons :device_interest,
                                          DonatedDeviceInterestForm.confirmation_interest_options,
                                          :value,
                                          :label,
                                          legend: {size: 'm', text: '' } %>
      <%= f.govuk_submit 'Continue' %>
    <%- end %>
  </div>
</div>