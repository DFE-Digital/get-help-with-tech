<%- who_orders = @current_user.orders_devices? ? 'user' : 'school' %>
<%- title = t("page_titles.school.devices.cannot_order_as_reopened.#{who_orders}.title") %>
<%- content_for :title, title %>
<%- content_for :before_content do %>
  <%- school_breadcrumbs items: 'Order devices', school: @school, user: @current_user %>
<%- end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl">Order devices</span>
      <%= title %>
    </h1>

    <div class="app-card app-card__order">
      <div class="govuk-panel__body govuk-!-font-size-24">
        You ordered <%= @school.std_device_allocation.devices_ordered %> of
        <%= @school.std_device_allocation.cap %> devices
      </div>
    </div>

    <% if @current_user.orders_devices? && @current_user.techsource_account_confirmed? %>
      <p class="govuk-body"><%= link_to 'View your order history on TechSource', techsource_start_path %></p>
    <% end %>

    <p class="govuk-body">
      We’ll contact you as soon as you’re able to place orders again.
    </p>
  </div>
</div>
