<%- title = t('page_titles.school_order_devices') %>
<%- content_for :title, title %>
<%- content_for :before_content do %>
  <%- school_breadcrumbs items: title, school: @school, user: @current_user %>
<%- end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= title %></h1>

    <%= render partial: 'shared/techsource_unavailable_banner' %>

    <%= render DeviceCountComponent.new(school: @school) %>

    <h2 class="govuk-heading-m">How to order</h2>

    <p class="govuk-body">You need to place your orders on a website called TechSource.</p>

    <p class="govuk-body"><%= t('responsible_body.devices.delivery_timeline') %></p>

    <% if @school&.std_device_allocation&.available_devices_count > 149 %>
      <p class="govuk-body">For large orders (more than 150 devices), weâ€™ll call your delivery contact to arrange delivery.</p>
    <% end %>

    <p class="govuk-body">
      If you try to order more than <%= what_to_order_allocation_list(allocations: @school.device_allocations) %> the order will be cancelled.
    </p>

    <p class="govuk-body">Order your devices now. Do not delay.</p>

    <h3 class="govuk-heading-s">Delivery address</h3>

    <p class="govuk-body">Your devices will be delivered to:</p>

    <p class="govuk-body">
      <%= @school.name %><br>
      <%= @school.address_1 %><br>
      <% if @school.address_2.present? %>
        <%= @school.address_2 %><br>
      <% end %>
      <% if @school.address_3.present? %>
        <%= @school.address_3 %><br>
      <% end %>
      <%= @school.town %><br>
      <%= @school.postcode %><br>
    </p>

    <p class="govuk-body">If you need to change your delivery address, contact <a class="govuk-link" href="mailto:COVID.TECHNOLOGY@education.gov.uk">COVID.TECHNOLOGY@education.gov.uk</a>.</p>

    <%= render partial: 'shared/start_ordering_on_techsource', locals: { email_address: @current_user.email_address, school_urn: @school.urn } %>
  </div>
</div>
