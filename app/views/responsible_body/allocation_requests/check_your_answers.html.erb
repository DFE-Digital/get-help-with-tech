<%- content_for :back_link, govuk_link_to('Back', responsible_body_allocation_request_path, class: 'govuk-back-link') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('page_titles.confirm') %>
    </h1>

    <dl class="govuk-summary-list govuk-summary-list--wide-terms">
      <div class="govuk-summary-list__row" id="number-eligible">
        <dt class="govuk-summary-list__key">
          Number eligible
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @allocation_request.number_eligible %>
        </dd>
      </div>

      <div class="govuk-summary-list__row" id="number-eligible-with-hotspot-access">
        <dt class="govuk-summary-list__key">
          Number who can access a BT hotspot
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @allocation_request.number_eligible_with_hotspot_access %>
        </dd>
      </div>
    </dl>

    <%= form_with model: @allocation_request, local: true, url: responsible_body_allocation_request_path do |f| %>
      <%= f.hidden_field :number_eligible %>
      <%= f.hidden_field :number_eligible_with_hotspot_access %>
      <%= f.govuk_submit 'Submit' %>
    <%- end %>
  </div>
</div>
