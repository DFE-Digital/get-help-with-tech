<%- content_for :before_content do %>
  <% breadcrumbs([{ "Home" => root_path },
                  'Your account' ,
                 ]) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop govuk-grid-column-full">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl"><%= @responsible_body.name %> </span>
      Your account
    </h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop govuk-grid-column-full">

      <div class="app-card govuk-!-margin-bottom-6">
        <h2 class="govuk-heading-m">
          Ordering is now closed for devices and internet access
        </h2>
        <% if @responsible_body.has_virtual_cap_feature_flags? %>
          <% if @responsible_body.std_device_allocation.devices_ordered.to_i.positive? && @responsible_body.coms_device_allocation.devices_ordered.to_i.positive? %>
            <p class="govuk-body">
              From September 2020 to July 2021, your <%= @responsible_body.humanized_type %> received:
            </p>
            <ul class="govuk-list govuk-list--bullet">
              <li><%= @responsible_body.std_device_allocation&.devices_ordered %> laptops and tablets</li>
              <li><%= @responsible_body.coms_device_allocation&.devices_ordered %> routers.</li>
            </ul>
          <% elsif @responsible_body.std_device_allocation&.devices_ordered.to_i.positive? && @responsible_body.coms_device_allocation&.devices_ordered.to_i == 0 %>
            <p class="govuk-body">
              From September 2020 to July 2021, your <%= @responsible_body.institution_type %> received <%= @responsible_body.std_device_allocation&.devices_ordered %> laptops and tablets.
            </p>
          <% elsif @responsible_body.std_device_allocation&.devices_ordered.to_i == 0 && @responsible_body.coms_device_allocation&.devices_ordered.positive %>
            <p class="govuk-body">
              From September 2020 to July 2021, your <%= @responsible_body.humanized_type %> received <%= @responsible_body.std_device_allocation&.devices_ordered %> routers.
            </p>
          <% else %>
            <p class="govuk-body">
              Your <%= @school.institution_type %> did not order any laptops, tablets or routers from September 2020 to July 2021.
            </p>
          <% end %>
        <% else %>
          <!-- Can we show sum of all the laptops and tablets, and routers for the LA? -->
        <% end %>
    </div>

    <%= render partial: 'shared/summary_access_to_support_portal' %>
    <%= render partial: 'shared/summary_reset_devices' %>

    <!-- If user can order || @responsible_body.has_connectivity_feature_flags? -->
      <%= render partial: 'shared/summary_order_history' %>
    <!-- end -->

  </div>
</div>
