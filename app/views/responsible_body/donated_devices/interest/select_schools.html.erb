<%-
  scope = 'page_titles.donated_devices.responsible_body.interest.select_schools'
  title = t('title', scope: scope)
%>
<%- content_for :title, title %>
<%- content_for :before_content, govuk_link_to('Back', responsible_body_donated_devices_all_or_some_schools_path, class: 'govuk-back-link') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= title %>
    </h1>

    <%= form_for @request, url: responsible_body_donated_devices_select_schools_path, method: :post do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_check_box :opt_in_choice, 'all_schools', label: { text: 'All schools' } %>

      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible"/>

      <%= f.govuk_collection_check_boxes :schools,
                                         @request.schools_to_select_options,
                                         :value,
                                         :label,
                                         legend: { size: 'm', text: '' } %>

      <%= f.govuk_submit 'Continue' %>
    <%- end %>
  </div>
</div>
