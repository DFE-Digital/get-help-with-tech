<%- title = t('page_titles.responsible_body_users_index') -%>

<%- content_for :title, title %>
<%- content_for :before_content do %>
  <% breadcrumbs([{ "Home" => root_path },
                  { "Your account" => responsible_body_home_path },
                  title ,
                 ]) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= title %>
    </h1>

    <p class="govuk-body">Everyone has the same level of access, they can:</p>
    <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
      <li>add or edit existing users</li>
      <li>view the list of existing users</li>
      <li>order devices for centrally managed schools and colleges</li>
      <li>
        use the Get help with Technology service to
        <%= govuk_link_to 'report faults', support_ticket_path %>
        and
        <%= govuk_link_to 'view passwords needed to replace DfE settings', assets_path -%>
      </li>
    </ul>

    <%= render GovukComponent::InsetTextComponent.new(text: "Do not add school or college contacts here. #{govuk_link_to 'Use the schools and colleges list instead', responsible_body_devices_path}.".html_safe) %>

    <%= govuk_button_link_to 'Invite a new user', new_responsible_body_user_path %>

    <%- unless @users.empty? %>
      <div id="user-list">
        <h2 class="govuk-heading-l">Users</h2>
        <%= render partial: 'responsible_body/users/user', collection: @users %>
      </div>
    <%- end %>
  </div>
</div>
