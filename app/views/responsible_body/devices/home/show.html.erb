<%- title = t('page_titles.responsible_body_devices_home') %>
<%- content_for :title, title %>
<%- content_for :before_content do %>
  <% breadcrumbs([
    { 'Home' => responsible_body_home_path },
    title,
  ]) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= title %></h1>

    <h2 class="govuk-heading-l govuk-!-font-size-27">
      <%= govuk_link_to t('page_titles.responsible_body_schools_list'), responsible_body_devices_schools_path %>
    </h2>

    <p class="govuk-body">Use this section to:</p>

    <ul class="govuk-list govuk-list--bullet">
      <li>see your list of schools and colleges and their device allocations</li>
      <li>tell us if the school or colleges will place their own orders</li>
      <li>give contacts and technical information for each school or college</li>
    </ul>

    <% if @responsible_body.is_ordering_for_schools? %>
      <h2 class="govuk-heading-l govuk-!-font-size-27">
        <%= govuk_link_to t('page_titles.order_devices.title'), responsible_body_devices_order_devices_path %>
      </h2>

      <p class="govuk-body">Use this section to:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>place orders</li>
        <li>access the Computacenter TechSource website</li>
      </ul>
    <%- end %>
  </div>
</div>
