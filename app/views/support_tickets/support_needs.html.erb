<% content_for :title, "What do you need help with?" %>

<%- content_for :before_content do %>
  <% breadcrumbs([{ "Home" => root_path },
                  {t('landing_pages.get_support.start') => support_ticket_path},
                  "What do you need help with?",
                 ]) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_for @form, url: support_ticket_support_needs_path do |f| %>
      <%= f.govuk_error_summary "Thereâ€™s a problem" %>

      <%= f.govuk_check_boxes_fieldset :support_topics,
                                       legend: { text: 'What do you need help with?', size: "xl" },
                                       hint: { text: "Select all of the options that apply", size: 'l' } do %>
        <%= render partial: 'support_tickets/option',
                  collection: @form.support_needs_options,
                  locals: { f: f,
                            option_type: 'govuk_check_box',
                            field_name: :support_topics,
                            heading_text: 'Do these articles answer your question?' } %>
      <%- end %>


      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
