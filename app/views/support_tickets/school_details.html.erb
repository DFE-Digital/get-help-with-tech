<% content_for :title, 'Which school do you work for?' %>

<%- content_for :before_content do %>
  <% breadcrumbs([{ "Get help with technology" => guidance_page_path },
                  {t('landing_pages.get_support.start') => support_ticket_path},
                  'Which school do you work for?',
                 ]) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @form, url: support_ticket_school_details_path do |f| %>
      <%= f.govuk_error_summary "Thereâ€™s a problem" %>

      <h1 class="govuk-heading-xl">
        Which school do you work for?
      </h1>

      <%= f.govuk_text_field :school_name, label: {text: 'School name', size: 's'} %>
      <%= f.govuk_number_field :school_urn,
                             label: {text: 'School URN', size: 's'},
                             hint: { text: 'This 6-digit number helps us to locate your school. <a href="https://get-information-schools.service.gov.uk/" target="_blank" rel="noopener noreferrer">Find your URN</a>.'.html_safe },
                             width: 5 %>
      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
